    <!-- Header -->
    <header>
        <div class="container">
            <nav class="navbar">
                <a href="#" class="navbar-brand">
                    <i class="fas fa-wine-bottle"></i>
                    Aapna Theka
                </a>
                
                <button class="mobile-menu-btn" id="mobileMenuBtn">
                    <i class="fas fa-bars"></i>
                </button>
                
                <ul class="nav-links" id="navLinks">
                    <li><a href="#home">Home</a></li>
