    /* ===== MODAL STYLES ===== */
    .modal-overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.7);
      backdrop-filter: blur(5px);
      z-index: 2000;
      display: flex;
      align-items: center;
      justify-content: center;
      opacity: 0;
      visibility: hidden;
      transition: all 0.3s ease;
    }

    .modal-overlay.active {
      opacity: 1;
      visibility: visible;
    }

    .modal {
      background-color: var(--background);
      width: 90%;
      max-width: 500px;
      border-radius: var(--radius);
      padding: 40px;
      position: relative;
      transform: translateY(-50px);
      transition: all 0.4s ease;
      box-shadow: 0 15px 50px rgba(0, 0, 0, 0.3);
    }

    .modal-overlay.active .modal {
      transform: translateY(0);
    }

    .modal-close {
      position: absolute;
      top: 20px;
      right: 20px;
      background: none;
      border: none;
      font-size: 1.5rem;
      cursor: pointer;
      color: var(--text-light);
      transition: var(--transition);
    }

    .modal-close:hover {
      color: var(--primary);
      transform: rotate(90deg);
    }

    .modal-title {
      font-size: 1.8rem;
      margin-bottom: 30px;
      color: var(--text);
      text-align: center;
    }

    .modal-tabs {
      display: flex;
      margin-bottom: 30px;
      border-bottom: 1px solid var(--border);
    }

    .modal-tab {
      flex: 1;
      text-align: center;
      padding: 15px;
      cursor: pointer;
      transition: var(--transition);
      color: var(--text-light);
      font-weight: 500;
    }

    .modal-tab.active {
      color: var(--primary);
      border-bottom: 2px solid var(--primary);
    }

    .modal-content {
      display: none;
    }

    .modal-content.active {
      display: block;
    }

    .social-login {
      display: flex;
      gap: 15px;
      margin-bottom: 30px;
    }

    .social-login-btn {
      flex: 1;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
      padding: 12px;
      border-radius: var(--radius);
      background-color: var(--card-bg);
      border: 1px solid var(--border);
      cursor: pointer;
      transition: var(--transition);
      color: var(--text);
    }

    .social-login-btn:hover {
      background-color: var(--border);
    }

    .divider {
      display: flex;
      align-items: center;
      margin: 20px 0;
      color: var(--text-light);
    }

    .divider::before,
    .divider::after {
      content: '';
      flex: 1;
      height: 1px;
      background-color: var(--border);
    }

    .divider span {
      padding: 0 15px;
    }

    /* ===== ANIMATIONS ===== */
    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    /* ===== RESPONSIVE STYLES ===== */
    @media (max-width: 992px) {
      .section-title {
        font-size: 2rem;
      }
      
      .hero-content h1 {
        font-size: 2.8rem;
      }
      
      .hero-content h3 {
        font-size: 1.5rem;
      }
      
      .contact-container {
        grid-template-columns: 1fr;
      }
      
      .contact-info {
        text-align: center;
      }
      
      .contact-item {
        justify-content: center;
      }
    }

    @media (max-width: 768px) {
      .nav-links {
        position: fixed;
        top: var(--header-height);
        left: 0;
        width: 100%;
        height: 0;
        background-color: rgba(0, 0, 0, 0.95);
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 20px;
        overflow: hidden;
        transition: height 0.3s ease;
        z-index: 999;
      }
      
      .nav-links.active {
        height: calc(100vh - var(--header-height));
        padding: 30px 0;
      }
      
      .mobile-menu-btn {
        display: block;
      }
      
      .hero-content h1 {
        font-size: 2.2rem;
      }
      
      .hero-content h3 {
        font-size: 1.3rem;
      }
      
      .hero-buttons {
        flex-direction: column;
        gap: 15px;
      }
      
      .form-row {
        grid-template-columns: 1fr;
      }
      
      .about-content p {
        padding: 0 20px;
      }
    }

    @media (max-width: 576px) {
      .section-title {
        font-size: 1.8rem;
      }
      
      .hero-content h1 {
        font-size: 2rem;
      }
      
      .hero-content p {
        font-size: 1rem;
      }
      
      .products-title {
        font-size: 2.2rem;
      }
      
      .modal {
        padding: 30px 20px;
      }
    }
  </style>
